.highlight1-32417,.highlight2-9c5d2{-webkit-box-shadow:inset 0 0 3px 3px #FF0;-moz-box-shadow:inset 0 0 3px 3px #FF0;box-shadow:inset 0 0 3px 3px #FF0}
